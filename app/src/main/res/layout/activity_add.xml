<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddActivity"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/header_titleBook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Book Title :"
        android:textSize="18sp"
        android:gravity="center"/>

    <EditText
        android:id="@+id/input_BookTitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Book Title"
        android:inputType="text"
        android:textSize="17sp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/header_authorBook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Book Author :"
        android:textSize="18sp"
        android:gravity="center"/>

    <EditText
        android:id="@+id/input_BookAuthor"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Book Author"
        android:inputType="text"
        android:textSize="17sp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/header_pagesBook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Book Pages :"
        android:textSize="18sp"
        android:gravity="center"/>

    <EditText
        android:id="@+id/input_BookPages"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Book Pages"
        android:inputType="number"
        android:textSize="17sp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/save_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textSize="20sp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"/>

</LinearLayout>